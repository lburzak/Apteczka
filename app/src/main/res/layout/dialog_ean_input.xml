<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ean_input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add medicine"/>

    <EditText android:id="@+id/ean_input"
        android:hint="Enter EAN"
        android:maxLength="13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ean_input_title"/>

    <Button
        android:id="@+id/ean_input_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ean_input"
        android:layout_alignRight="@+id/ean_input"
        android:text="Add"/>

</RelativeLayout>
